<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <!-- Lista pitanja -->
    <ListView
        android:id="@+id/questionsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Prikaz odgovora (chat bubble) -->
    <TextView
        android:id="@+id/answerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/bubble_background"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

    <!-- Dugme za postavljanje novog pitanja -->
    <Button
        android:id="@+id/buttonAskQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Postavi novo pitanje"
        android:layout_marginTop="20dp" />

    <!-- Ocjena aplikacije (zvjezdice) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ocijeni aplikaciju:"
        android:textSize="16sp"
        android:layout_marginTop="20dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:layout_marginTop="10dp" />

</LinearLayout>
